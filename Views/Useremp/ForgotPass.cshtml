@model employeeproject.Models.ForgotPassVM

<h4>ForgotPassVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ForgotPass">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="send link" class="btn btn-primary" onclick="showMessage()" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<script>
    function showMessage() {
        const message = "A password reset link has been sent to your email. Please check your inbox."; // Customize your message here
        const messageElement = document.createElement("p");
        messageElement.textContent = message;
        messageElement.style.fontWeight = "bold"; // Make the text readable

        // Show a pop-up alert
        alert(message);

        // Append the message to the container
        document.getElementById("messageContainer").appendChild(messageElement);
    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
